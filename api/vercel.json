{
  "version": 2,
  "builds": [
    { "src": "posts/index.ts", "use": "@vercel/node" },
    { "src": "auth/index.ts", "use": "@vercel/node" },
    { "src": "api/users/[userId].ts", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/dist" } }
  ],
  "routes": [
    { "src": "/api/posts", "dest": "/posts/index.ts" },
    { "src": "/api/auth", "dest": "/auth/index.ts" },
    { "src": "/api/users/(?<userId>[^/]+)", "dest": "/api/users/[userId].ts" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
